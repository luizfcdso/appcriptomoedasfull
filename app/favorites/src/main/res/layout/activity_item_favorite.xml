<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_coin_favorite"
    android:layout_width="180dp"
    android:layout_height="180dp"
    android:layout_margin="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="157dp"
        android:layout_height="133dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/favorites_fund_item"
        android:foregroundGravity="center"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/coin_name_fav"
            android:layout_width="120dp"
            android:layout_height="26dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="text" />

        <TextView
            android:id="@+id/coin_sub_name_fav"
            android:layout_width="120dp"
            android:layout_height="26dp"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:textColor="@color/white"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="@id/coin_name_fav"
            app:layout_constraintRight_toRightOf="@id/coin_name_fav"
            app:layout_constraintTop_toTopOf="@id/coin_name_fav"
            tools:text="text" />

        <TextView
            android:id="@+id/coin_value_fav"
            android:layout_width="82dp"
            android:layout_height="26dp"
            android:layout_marginTop="36dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@id/coin_sub_name_fav"
            app:layout_constraintRight_toRightOf="@id/coin_sub_name_fav"
            app:layout_constraintTop_toTopOf="@id/coin_sub_name_fav"
            tools:text="text" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/coin_icon_fav"
        android:layout_width="35dp"
        android:layout_height="40dp"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>